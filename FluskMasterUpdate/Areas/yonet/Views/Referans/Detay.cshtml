@model Referans
@{
    ViewBag.Title = "Referans Güncelle";
    if (Model.Id==00)
    {
        ViewBag.Title = "Referans Ekle";
    }
    Layout = "~/Areas/yonet/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Detay</h4>
                <p class="card-description">
                    @ViewBag.Title
                </p>
                @Html.Raw(ViewBag.Mesaj)
                <form class="forms-sample" role="form" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputUsername1">Adı Soyadı</label>
                        <input required value="@Model.AdiSoyadi" name="Baslik" type="text" class="form-control" id="exampleInputUsername1" placeholder="Referans Adı-Soyadı">

                        <label for="exampleInputUsername1">Şirketi</label>
                        <input required value="@Model.Sirketi" name="Sirketi" type="text" class="form-control" id="exampleInputUsername1" placeholder="Referans Şirketi">
                        
                        <label for="exampleInputUsername1">Açıklama</label>
                        <input required value="@Model.Aciklama" name="Aciklama" type="text" class="form-control" id="exampleInputUsername1" placeholder="Referans Açıklaması">
                        
                        <label for="exampleInputUsername4">Görsel</label>
                        <input required value="@Model.Gorsel" name="fGorsel" type="file" class="form-control" id="exampleInputUsername1">

                    </div>
                    <button type="submit" class="btn-xs btn-primary mr-2"><i class="mdi mdi-content-save">Kaydet</i></button>
                    <a href="~/yonet/Referans" class="btn-xs btn btn-light"><i class="mdi mdi-undo">Vazgeç</i></a>
                </form>
            </div>
        </div>
    </div>
</div>

