@model List<Iletisim>
@{
    string elemanblg = GenelAraclarBLL.ElemanBilgisi(ViewBag.Count);
}
<script>
    $(function () {
        $("#spnElemanBilgisi").html("@(elemanblg)");
    });
</script>
<table class="table table-hover table-active">
    <thead class="table table-active">
        <tr>
            <th>
                #
            </th>
            <th>
                <input type="checkbox" id="cbTumu" />
            </th>
            <th>
                <a href="~/yonet/iletisim@(GenelAraclarBLL.SortLink("Adi"))">
                    <i class="mdi mdi-chevron-up"></i>
                    Adı
                    <i class="mdi mdi-chevron-down"></i>
                </a>
            </th>
            <th>
                Email
            </th>
            <th>
                Açıklama
            </th>
            <th>
                Detay
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <th>
                <input type="checkbox" class="cbTek" name="cbTek" value="@item.Id" />
            </th>
            <td>
                @item.Adi
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Aciklama
            </td>
            <td>
                <a href="~/yonet/iletisim/detay/@item.Id">
                    <i class="mdi mdi-library-plus"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
@Html.Raw(GenelAraclarBLL.SayfalamaYap("Iletisim", ViewBag.Count))
